<body style="background-color: black;">
<nav style="background-color: #ffe2e2;" class="navbar">
    
        <div class="container-fluid">
            <a class="navbar-brand" href="../views/Home.html" style="color: black;">Back</a>
            <a class="navbar-brand" style="color: black; text-align:left;">Payment Form</a>
        </div>
</nav>

<div class="container" style="background-color: black;">
    <form action="/buy" method="POST">
        <label for="fname" style="color: white; font-size: medium;">Name</label><br>
        <input type="text" id="fname" name="fullname" placeholder="Your Full name.." required>
        <br>
        <label for="PhoneNo" style="color: white;  font-size: medium;">Phone Number</label><br>
        <input type="tel" id="PhoneNo" name="phone" placeholder="Your Phone Number.." required>
        <br>
        <!-- <label for="pay" style="color: white;  font-size: medium;">Payment Method</label><br> -->
        <!-- <select class="form-select" aria-label="Default select example" name="method">
            <option selected>Payment methods</option>
            <option value="upi">UPI</option>
